@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form asp-controller="Admin" asp-action="RoleAssign" method="post">
    @for (int i = 0; i < Model.Count(); i++)
    {
    <div class="form-check d-inline-block m-3">
        <input asp-for="@Model[i].Exist" class="form-check-input" type="checkbox">
        <label asp-for="@Model[i].RoleId" class="form-check-label">@Model[i].RoleName</label>

        <input asp-for="@Model[i].RoleName" class="form-check-input" type="hidden">
        <input asp-for="@Model[i].RoleId" class="form-check-input" type="hidden">

    </div>
    }
    <input class="btn btn-outline-success mt-5 float-right" type="submit" value="Rol Ekle" />
</form>

