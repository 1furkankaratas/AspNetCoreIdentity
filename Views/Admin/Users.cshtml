@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">User Name</th>
            <th scope="col">Email</th>
            <th scope="col">Rol</th>
            <th scope="col">Edit</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center"><u><b>Hiç üye bulunamadı</b></u></td>
            </tr>
        }
        else
        {
            foreach (var user in Model)
            {
                var a = Model.IndexOf(user) + 1;
                <tr>
                    <th>@a</th>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td user-roles="@user.Id"></td>
                    <td><a asp-action="RoleAssign" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Ekle</a></td>
                </tr>
            }
        }
    </tbody>
</table>

