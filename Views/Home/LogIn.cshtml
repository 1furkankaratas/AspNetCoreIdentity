@model LogInViewModel

@{
    ViewData["Title"] = "Log In";
}


<div class="col-md-4 mx-auto mt-3 bg-light shadow p-3 rounded">
    @if (TempData["prs"] != null)
    {
        if (TempData["prs"].ToString() == "t")
        {
            <div class="alert alert-success">İşlem başarılı, tekrar giriş yapabilirsiniz</div>
        }
        else
        {
            <div class="alert alert-warning">İşlem başarısız</div>
        }
    }

    <h2>Giriş yap</h2>
    <hr />
    <form asp-action="LogIn">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" value="furkan.karatas1414@gmail.com" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" value="F.k4213341" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check mb-4">
            <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe">
            <label class="form-check-label" for="rememberMe">Beni Hatırla</label>
            <a class="btn btn-sm float-right" asp-action="ResetPassword" asp-controller="Home">Şifremi unuttum</a>
        </div>
        <div class="form-group text-right">
            <input type="submit" value="Giriş Yap" class="btn btn-sm btn-outline-primary" />
        </div>
    </form>
</div>
