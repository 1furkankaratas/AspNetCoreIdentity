@model PasswordChangeViewModel

@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "~/Views/Shared/MemberLayout.cshtml";
}

<div class="col-md-8 mx-auto mt-3 bg-light shadow p-3 rounded">
    <h2>Şifre Değiştir</h2>
    <hr />
    <form asp-action="PasswordChange">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="OldPassword" class="control-label"></label>
            <input asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label"></label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPasswordConfirm" class="control-label"></label>
            <input asp-for="NewPasswordConfirm" class="form-control" />
            <span asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
        </div>
        <div class="form-group text-right">
            <input type="submit" value="Kaydet" class="btn btn-sm btn-outline-primary" />
        </div>
    </form>
</div>

